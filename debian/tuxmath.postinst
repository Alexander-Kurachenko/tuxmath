#!/bin/sh

set -e

## https://wiki.debian.org/MissingCopyrightFile
## Replace documentation directory with symlink
docdir="/usr/share/doc/tuxmath"
if [ -d "${docdir}" ] && [ ! -h "${docdir}" ]; then
    rmdir "${docdir}" 2>/dev/null \
    && ln -sf "${docdir}-data" "${docdir}" \
    || echo "W: Unable to remove \"${docdir}\" -- not empty?"
fi

